<li>
  <%= link_to gravatar_for(user, size: 50), user %>
  <%= link_to user.name, user %>
  <!-- I added the current user because it wouldn't load the page if there was no user -->
  <!-- Might want to double check that it doesn't break anything else -->
  <% if current_user %>
    <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "delete", user, method: :delete,
                                    data: { confirm: "You sure?" } %>
    <% end %>
  <% end %>
</li>
